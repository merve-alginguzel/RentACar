@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Mouldifi - A fully responsive, HTML5 based admin theme">
    <meta name="keywords" content="Responsive, HTML5, admin theme, business, professional, Mouldifi, web design, CSS3">
    <title>Giriş Yap</title>
    <!-- Site favicon -->
    <link rel='shortcut icon' type='image/x-icon' href='images/favicon.ico' />
    <!-- /site favicon -->
    <!-- Entypo font stylesheet -->
    <link href="~/Content/css/entypo.css" rel="stylesheet">
    <!-- /entypo font stylesheet -->
    <!-- Font awesome stylesheet -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet">
    <!-- /font awesome stylesheet -->
    <!-- CSS3 Animate It Plugin Stylesheet -->
    <link href="~/Content/css/plugins/css3-animate-it-plugin/animations.css" rel="stylesheet">
    <!-- /css3 animate it plugin stylesheet -->
    <!-- Bootstrap stylesheet min version -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- /bootstrap stylesheet min version -->
    <!-- Mouldifi core stylesheet -->
    <link href="~/Content/css/mouldifi-core.css" rel="stylesheet">
    <!-- /mouldifi core stylesheet -->

    <link href="~/Content/css/mouldifi-forms.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="js/html5shiv.min.js"></script>
          <script src="js/respond.min.js"></script>
    <![endif]-->


</head>
<body class="login-page" style="background-color:white">
    <div class="login-pag-inner">
        <div class="animatedParent animateOnce z-index-50">
            <div class="login-container animated growIn slower">
                <div class="login-branding">
                    <a href="#"><img src="~/Content/images/login_jpg.jpg" alt="HOŞGELDİNİZ" title="HOŞGELDİNİZ"></a>
                </div>
                <div class="login-content" style="background-color:white">
                    <h2><strong>HOŞGELDİNİZ </strong>, Lütfen giriş yapın</h2>
                    <form method="post" action="@Url.Action("LoginControl","Home")">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>

                        @if (Session["Username"] == "Hata")
                        {
                            <div class="alert alert-danger" role="alert">Kullanıcı Adınız veya Şifreniz Hatalı</div>
                        }

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--Load JQuery-->
    <script src="~/Content/js/jquery.min.js"></script>
    <!-- Load CSS3 Animate It Plugin JS -->
    <script src="~/Content/js/plugins/css3-animate-it-plugin/css3-animate-it.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
</body>
</html>
